<div class="formularios">
  <div>
    <h2 style="background-color: rgba(88, 255, 17, 0.907);">Agregar Producto</h2>
    <form id="formProduct">
      Title:
      <input type="text" name="title" id="title" required />
      Description:
      <input type="text" name="description" id="description" required />
      Price:
      <input type="number" name="price" id="price" required />
      Stock:
      <input type="number" name="stock" id="stock" required />
      Code:
      <input type="text" name="code" id="code" required />
      <input type="submit" value="Enviar" />
    </form>
  </div>
  <div>
    <h2 style="background-color: rgb(255, 47, 47);">Eliminar Producto</h2>
    <form id="deleteProduct">
      ID:
      <input type="number" name="id" id="id" />
      <input type="submit" value="Eliminar" />
    </form>
  </div>
</div>

<table id="tableProds" style="background-color: rgb(108, 110, 239);">
  <thead>
    <tr>
      <th style="padding: 1rem; font-size: 1.5rem">ID</th>
      <th style="padding: 1rem; font-size: 1.5rem">Title</th>
      <th style="padding: 1rem; font-size: 1.5rem">Description</th>
      <th style="padding: 1rem; font-size: 1.5rem">Price</th>
      <th style="padding: 1rem; font-size: 1.5rem">Stock</th>
      <th style="padding: 1rem; font-size: 1.5rem">code</th>
    </tr>
  </thead>
  <tbody id="bodyProd">
    {{#each products}}
      <tr style="text-align: center;">
        <td style="padding: 0.7rem;">{{id}}</td>
        <td style="padding: 0.7rem;">{{title}}</td>
        <td style="padding: 0.7rem;">{{description}}</td>
        <td style="padding: 0.7rem;">${{price}}</td>
        <td style="padding: 0.7rem;">{{stock}}</td>
        <td style="padding: 0.7rem;">{{code}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>